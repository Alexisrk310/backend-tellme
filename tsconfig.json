{
  "compilerOptions": {
    "target": "es2020",               // Especifica el nivel de JavaScript que deseas
    "module": "commonjs",             // Para compatibilidad con Node.js
    "baseUrl": "./src",               // Configura la base URL para resolver módulos
    "typeRoots": ["./node_modules/@types", "./src/types"],  // Define donde buscar tipos personalizados
    "strict": true,                   // Habilita todas las verificaciones estrictas
    "esModuleInterop": true,          // Para compatibilidad con importaciones de módulos
    "skipLibCheck": true,             // Evita comprobaciones de tipos en las bibliotecas
    "outDir": "./dist",               // Directorio de salida para los archivos compilados
    "rootDir": "./src",               // Define el directorio raíz de los archivos fuente
    "forceConsistentCasingInFileNames": true  // Asegura la consistencia de mayúsculas/minúsculas en los nombres de archivo
  },
  "include": ["src"],  // Incluir todos los archivos en la carpeta src
  "exclude": ["node_modules"]  // Excluir node_modules de la compilación
}
